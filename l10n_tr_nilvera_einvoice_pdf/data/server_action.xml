<odoo>



    <!-- ir.actions.server ile toplu halde faturaları indirme butonu ekleyelim-->
    <record id="action_server_download_nilvera_einvoices" model="ir.actions.server">
        <field name="name">Nilvera Faturası İndir</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="code">
for record in records:
    record.action_download_einvoice_pdf()
        </field>
    </record>

    <!-- action_send_einvoice_pdf_bulk -->

    <record id="action_server_send_nilvera_einvoices_email" model="ir.actions.server">
        <field name="name">Nilvera Faturasını Mail Gönder</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="code">
records.action_send_einvoice_pdf_bulk()
        </field>
    </record>







</odoo>