<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_einvoice_pdf" model="ir.ui.view">
        <field name="name">account.move.form.einvoice.pdf</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='checked']" position="after">
                <field name="e_invoice_mail_send"  invisible="l10n_tr_nilvera_send_status not in ['sent', 'succeed', 'waiting']"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_download_einvoice_pdf"
                        string="E-Fatura'yı İndir"
                        type="object"
                        class="btn-primary"
                        context="{'single_pdf': True}"
                        invisible="l10n_tr_nilvera_send_status not in ['sent', 'succeed', 'waiting']"/>

                <button name="action_send_einvoice_pdf_email"
                        string="E-Fatura'yı Mail Gönder"
                        type="object"
                        class="btn-secondary"
                        invisible="l10n_tr_nilvera_send_status not in ['sent', 'succeed', 'waiting'] or e_invoice_mail_send"/>
            </xpath>
        </field>
    </record>
</odoo>