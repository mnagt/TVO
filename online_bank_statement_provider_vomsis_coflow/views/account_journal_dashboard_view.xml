<odoo>
    <record model="ir.ui.view" id="provider_vomsis_dashboard_view">
        <field name="name">account.journal.dashboard.kanban (in online_bank_statement_provider_vomsis_kita)</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban//div[@name='bank_cash_buttons']" position="after">
                <field name="online_bank_statement_provider_id" invisible="1"/>
                <t t-value="record.online_bank_statement_provider_id.raw_value" t-set="provider"/>
                <button t-if="provider"
                    name="action_online_bank_statements_pull_wizard" 
                    type="object" 
                    class="btn btn-sm btn-info" 
                    groups="account.group_account_invoice">
                    Manuel Ekstre Al
                </button>
            </xpath>
        </field>
    </record>
</odoo>
