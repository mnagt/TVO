<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_expense_sheet_form_inherit" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.inherit.extension</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='expense_total']" position="after">
                <group class="oe_subtotal_footer" colspan="2" name="expense_total_amount_currency">
                    <field name="currency_tl_id" invisible="1"/>
                    <field name="untaxed_amount_currency" options="{'currency_field': 'currency_tl_id'}"/>
                    <field name="total_tax_amount_currency" options="{'currency_field': 'currency_tl_id'}"/>
                    <field name="total_amount_currency" options="{'currency_field': 'currency_tl_id'}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
