<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="show_invoice_type" invisible="1" />
                <field
                    name="invoice_type"
                    readonly="state!='draft'"
                    options="{'no_create':True}"
                    domain="[('model', '=', 'account.move')]"
                    invisible="not show_invoice_type"
                />

            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_invoice_type">
        <field name="name">Invoice Types</field>
        <field name="res_model">record.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_model':'account.move'}</field>
        <field name="domain">[('model', '=', 'account.move')]</field>
    </record>

    <menuitem
        id="menu_invoice_order_type"
        name="Invoice Types"
        parent="account.account_invoicing_menu"
        action="action_invoice_type"
    />
</odoo>
