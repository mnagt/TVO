<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Saleorder type views and actions    -->
    <record model="ir.ui.view" id="view_record_type_form">
        <field name="name">saleorder.type.form</field>
        <field name="model">record.type</field>
        <field eval="50" name="priority" />
        <field name="arch" type="xml">
            <form string="Record Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="model" />
                            <field name="user_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field
                                name="route_ids"
                                string="Routes"
                                options="{'no_create': True}"
                                groups="stock.group_adv_location"
                                widget="many2many_tags"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page string="Default Values">
                            <field name="default_values_ids" mode="tree" nolabel="1">
                                <tree no_open="1" editable="bottom">
                                    <field name="record_type_id" column_invisible="True" />
                                    <field name="model_id" column_invisible="True" />
                                    <field name="field_id" options="{'no_create':True}" />
                                    <field name="field_name" column_invisible="True" />
                                    <field name="value_ref" readonly="field_type != 'id'" />
                                    <field name="field_value" />
                                    <field name="field_type" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_record_type_tree">
        <field name="name">saleorder.type.tree</field>
        <field name="model">record.type</field>
        <field eval="50" name="priority" />
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="model" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_record_type">
        <field name="name">Record Types</field>
        <field name="res_model">record.type</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
