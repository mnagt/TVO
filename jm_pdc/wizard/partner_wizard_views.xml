<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_wizard_form" model="ir.ui.view">
        <field name="name">partner.wizard.form</field>
        <field name="model">partner.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="allowed_partner_ids" invisible="1"/>
            <group>
                <group>
                    <field name="partner_ids" widget="many2many_tags" options="{'no_create': True}" invisible="selected_state != False"/>
                    <field name="selected_state"/>
                </group>
                <group>
                    <field name="from_date"/>
                    <field name="to_date"/>
                </group>
            </group>
                <footer>
                    <button string="Print Report" type="object" name="button_print_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    
    <record id="action_partner_wizard" model="ir.actions.act_window">
        <field name="name">PDC Wizard Reports</field>
        <field name="res_model">partner.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_partner_wizard_form"/>
        <field name="target">new</field>
    </record>


    <menuitem name="Reports" id="menu_pdc_group" parent="account.menu_finance_reports" sequence="10"/>
    <menuitem name="PDC Reports" id="menu_pdc_report"
        action="action_partner_wizard"
        sequence="27"
        parent="menu_pdc_payment"/>


</odoo>
