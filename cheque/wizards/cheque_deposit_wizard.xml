<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_cheque_deposit_wizard_form" model="ir.ui.view">
        <field name="name">cheque.deposit.wizard.form</field>
        <field name="model">cheque.deposit.wizard</field>
        <field name="arch" type="xml">
            <form string="Deposit Cheques">
                <group>
                    <group>
                        <field name="bank_journal_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="deposit_date"/>
                    </group>
                    <group>
                        <field name="cheque_count" readonly="1"/>
                        <field name="total_amount" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                </group>
                <group string="Selected Cheques">
                    <field name="cheque_ids" nolabel="1" readonly="1" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm Deposit" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
