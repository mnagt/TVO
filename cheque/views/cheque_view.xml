<odoo>

    <!-- Own checks search view -->
    <record model="ir.ui.view" id="view_account_payment_search">
        <field name="name">account.check.search</field>
        <field name="model">account.cheque</field>
        <field name="inherit_id" eval="False"/>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="original_journal_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <separator/>
                <filter string="Payment Date" name="payment_date" date="payment_date"/>
                <separator/>
                <filter string="Voided" name="checks_voided" domain="[('state', '=', 'voided')]"/>
                <filter string="Cashed" name="checks_cashed" domain="[('state', '=', 'cashed')]"/>
                <separator/>
                <filter string="Partner" name="groupby_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                <filter string="Payment Date" name="groupby_date" domain="[]" context="{'group_by': 'payment_date'}"/>
                <filter string="State" name="groupby_state" domain="[]" context="{'group_by': 'state'}"/>
                <filter string="Company" name="groupby_company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                <separator/>
                <filter invisible="1" string="Late Activities" name="activities_overdue" domain="[('my_activity_date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]" help="Show all records which has next action date is before today"/>
                <filter invisible="1" string="Today Activities" name="activities_today" domain="[('my_activity_date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter invisible="1" string="Future Activities" name="activities_upcoming_all" domain="[('my_activity_date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
            </search>
        </field>
    </record>

    <!-- Third party checks search view -->
    <record model="ir.ui.view" id="view_account_payment_third_party_checks_search">
        <field name="name">account.check.search</field>
        <field name="model">account.cheque</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="view_account_payment_search"/>
        <field name="arch" type="xml">
            <filter name="checks_voided" position="replace"/>
            <filter name="checks_cashed" position="replace">
                <filter string="On hand" name="checks_on_hand"
                    domain="[('current_journal_id.inbound_payment_method_line_ids.payment_method_id.code', '=', 'cheque_existing_in')]"/>
            </filter>
            <field name="original_journal_id" position="before">
                <field name="issuer_vat"/>
                <field name="bank_id"/>
                <field name="current_journal_id"/>
            </field>
            <filter name="groupby_state" position="replace">
                <filter name="groupby_state"
                    string="Status"
                    context="{'group_by': 'state'}"/>
                <filter name="groupby_current_journal"
                    string="Current Journal"
                    context="{'group_by': 'current_journal_id'}"/>
            </filter>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_third_party_check_operations_tree">
        <field name="name">account.check.operations.list</field>
        <field name="model">account.payment</field>
        <field name="priority" eval="99"/>
        <field name="arch" type="xml">
            <list default_order="date desc, id desc, name desc" create="false" delete="false" duplicate="false" >
                <field name="date" readonly="state == 'posted'"/>
                <field name="name"/>
                <field name="payment_type"/>
                <field name="journal_id"/>
                <field name="partner_id" string="Customer"/>
                <field name="state" column_invisible="True"/>
            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_check_calendar">
        <field name="name">account.check.calendar</field>
        <field name="model">account.cheque</field>
        <field name="arch" type="xml">
            <calendar
                    mode="month"
                    date_start="payment_date"
                    color="original_journal_id">
                <field name="amount"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_check_pivot">
        <field name="name">account.check.pivot</field>
        <field name="model">account.cheque</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="payment_date" type="row" interval="month"/>
                <field name="payment_date" type="row" interval="week"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="cheque_view_form" model="ir.ui.view">
        <field name="name">account.cheque.view.form</field>
        <field name="model">account.cheque</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <field name="outstanding_line_id" invisible="True"/>
                <header>
                    <button name="action_void" string="Void Check"
                            invisible="payment_method_code == 'cheque_incoming' or state in ('voided', 'cashed')"
                            type="object" class="oe_highlight"
                            confirm="Marking a check as void will cancel the check and generate a new entry that will re-open the debt." data-hotkey="v"/>
                    <button name="action_deposit" string="Deposit" type="object" class="oe_highlight"
                            invisible="payment_method_code != 'cheque_incoming' or state not in ('register', 'bounce')"/>
                    <button name="%(action_cheque_outgoing_wizard_view)d" type="action"
                            string="Cashed" class="oe_highlight"
                            invisible="payment_method_code != 'cheque_incoming' or state != 'deposit'"/>
                    <button name="action_bounce" type="object" string="Bounced" class="oe_highlight"
                            invisible="payment_method_code != 'cheque_incoming' or state != 'deposit'"/>
                    <button name="action_void" type="object" string="Voided" class="oe_highlight"
                            invisible="payment_method_code != 'cheque_incoming' or state not in ('register', 'bounce')"
                            confirm="This will void the cheque and reopen the original debt."/>
                    <field name="state" widget="badge"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button  icon="fa-bars" type="object" name="button_open_check_operations" invisible="payment_method_code != 'cheque_incoming'">
                            <span>Operations</span>
                        </button>
                        <button  icon="fa-bars" type="object" name="button_open_payment" invisible="payment_method_code != 'cheque_outgoing'">
                            <span>Payment</span>
                        </button>
                        <button  icon="fa-bars" type="object" invisible="not outstanding_line_id" name="action_show_journal_entry" groups="account.group_account_user,account.group_account_readonly">
                            <span>Journal Entry</span>
                        </button>
                        <button  icon="fa-bars" type="object" invisible="state not in ('voided', 'cashed')" name="action_show_reconciled_move" groups="account.group_account_user,account.group_account_readonly">
                            <span>Reconciled move</span>
                        </button>
                    </div>
                    <group>
                        <group string="Cheque Info">
                            <field name="name"/>
                            <field name="amount"/>
                            <field name="payment_date"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Journal">
                            <field name="original_journal_id"/>
                            <field name="current_journal_id" invisible="payment_method_code != 'cheque_incoming'"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group string="Partner">
                            <field name="partner_id" string="Owner"/>
                        </group>
                        <group string="Issuer Details" invisible="payment_method_code != 'cheque_incoming'">
                            <field name="issuer_name"/>
                            <field name="issuer_vat"/>
                            <field name="bank_id"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

 <!-- Own Check Views and menus -->

    <record model="ir.ui.view" id="view_account_own_check_tree">
        <field name="name">account.check.list</field>
        <field name="model">account.cheque</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <list edit="false" create="false" delete="false" duplicate="false" sample="1" decoration-muted="state in ('voided', 'cashed')">
                    <field name="current_journal_id"/>
                    <field name="name"/>
                    <field name="payment_date" optional="show"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="issuer_name" optional="show"/>
                    <field name="bank_id"/>
                    <field name="amount" optional="show"/>
                    <field name="state" widget="badge" decoration-muted="state in ('voided', 'cashed')"/>
                    <field name="currency_id" string="Payment Currency" optional="hide"/>
                    <field name="original_journal_id" optional="hide" />
            </list>
        </field>
    </record>

    <menuitem id='main_menu_incoming_cheque_management' name='Cheque' parent='account.menu_finance'/>

    <record model="ir.actions.act_window" id="action_own_check">
        <field name="name">Issued</field>
        <field name="res_model">account.cheque</field>
        <field name="view_mode">list,form,calendar,graph,pivot</field>
        <field name="view_id" ref="view_account_own_check_tree"/>
        <field name="search_view_id" ref="view_account_payment_search"/>
        <field name="domain">[('outstanding_line_id', '!=', False)]</field>
        <field name="context">{'group_by': 'state'}</field>
    </record>

    <menuitem
        action="action_own_check"
        id="menu_own_check"
        sequence="50"
        parent="main_menu_incoming_cheque_management"/>

<!-- Third party check Views and menus -->
    <record model="ir.ui.view" id="view_account_third_party_check_tree">
        <field name="name">account.check.list</field>
        <field name="model">account.cheque</field>
        <field name="priority">110</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="view_account_own_check_tree"/>
        <field name="arch" type="xml">
            <field name="original_journal_id" position="replace">
                <field name="current_journal_id" string="Current Journal"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_third_party_check">
        <field name="name">Received</field>
        <field name="res_model">account.cheque</field>
        <field name="view_mode">list,form,calendar,graph,pivot</field>
        <field name="view_id" ref="view_account_third_party_check_tree"/>
        <field name="search_view_id" ref="cheque.view_account_payment_third_party_checks_search"/>
        <field name="domain">[('payment_method_code', '=', 'cheque_incoming'), ('payment_id.state', '!=', 'draft')]</field>
        <field name="context">{'group_by': 'state'}</field>
    </record>

    <menuitem
        action="action_third_party_check"
        id="menu_third_party_check"
        sequence="40"
        parent="main_menu_incoming_cheque_management"/>

</odoo>
